<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/inkGrey</item>
        <item name="colorPrimaryDark">@color/inkGrey</item>
        <item name="colorAccent">@color/inkGrey</item>
    </style>

    <!-- Custom Theme -->
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/selected</item>
        <item name="colorPrimary">@color/purpleGray</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/ibm_plex_sans_midium</item>
    </style>

    <!-- Text Style -->
    <style name="Text.textSmallStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/inkGrey</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.textSmallBoldStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/inkGrey</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="Text.textStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/inkGrey</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="Text.textStyleTransparent" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/inkGreyTransparent</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Text.textBoldStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/inkGrey</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Text.textBoldRedStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/warning</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.medium" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/inkGrey</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_midium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
