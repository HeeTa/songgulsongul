<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey"
    tools:context=".activity.EditDoneActivity">

    <TextView
        android:id="@+id/edit_done_text"
        style="@style/Text.medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업로드만 남았습니다!"
        app:layout_constraintBottom_toTopOf="@+id/edit_done_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/edit_done_pic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:srcCompat="@tools:sample/avatars" />


    <Button
    android:id="@+id/edit_done_upload"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_margin"
    android:text="업로드 하러 가기"
    style="@style/Text.textStyle"
    android:background="@drawable/border"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/edit_done_pic" />

    <Button
        android:id="@+id/edit_done_back"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:text="돌아가기"
        style="@style/Text.textStyle"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@+id/edit_done_share" />

    <Button
        android:id="@+id/edit_done_market"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:text="마켓 업로드 하러 가기"
        style="@style/Text.textStyle"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_done_upload" />

    <Button
        android:id="@+id/edit_done_share"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:text="공유하기"
        style="@style/Text.textStyle"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_done_market" />
</androidx.constraintlayout.widget.ConstraintLayout>