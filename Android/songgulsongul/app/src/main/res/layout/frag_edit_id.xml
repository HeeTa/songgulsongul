<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/narrow_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/narrow_margin"
        android:background="@drawable/border"
        android:padding="@dimen/narrow_margin"

        android:orientation="vertical">
        <TextView
            android:id="@+id/edit_profile_idtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="변경할 아이디를 입력해주세요"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginLeft="@dimen/narrow_margin"
            style="@style/Text.textBoldStyle"
            >

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/narrow_margin"
            >

            <EditText
                android:id="@+id/account_newid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/PurpleGrayTheme"
                android:background="@null"
                style="@style/PurpleGrayTheme"
                android:hint="변경할 아이디">

            </EditText>

            <Button
                android:id="@+id/account_id_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purpleGray"
                android:layout_marginLeft="@dimen/common_margin"
                style="@style/Text.textStyle"
                android:backgroundTint="@color/purpleGray"
                android:text="중복확인">

            </Button>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>