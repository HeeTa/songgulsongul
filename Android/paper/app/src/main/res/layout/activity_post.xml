<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.PostActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_toolbar"
        android:background="@color/cardview_shadow_start_color"
        >

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="74dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            tools:ignore="MissingConstraints">

            <smu.capstone.paper.layout.RoundImageView
                android:id="@+id/post_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="7.5dp"
                android:src="@mipmap/ic_launcher"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/post_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <ImageButton
            android:id="@+id/post_setting_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/settingmenu"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="00.00.00" />

    <ImageView
        android:id="@+id/post_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
        android:scaleType="fitXY"
        tools:ignore="VectorDrawableCompat" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/post_like_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/like_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/post_cmt"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_chat_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/post_like_btn"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:id="@+id/post_ccls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="35dp">
                <ImageView
                    android:id="@+id/post_ccl1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
                    tools:ignore="VectorDrawableCompat" />
                <ImageView
                    android:id="@+id/post_ccl2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
                    tools:ignore="VectorDrawableCompat" />
                <ImageView
                    android:id="@+id/post_ccl3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
                    tools:ignore="VectorDrawableCompat" />
                <ImageView
                    android:id="@+id/post_ccl4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
                    tools:ignore="VectorDrawableCompat" />
                <ImageView
                    android:id="@+id/post_ccl5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/ic_baseline_emoji_emotions_24"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <view
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/post_keep_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="right"
                android:background="@drawable/keep_btn" />
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_like_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="좋아요 0"/>
            <TextView
                android:id="@+id/post_cmt_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="댓글 0"/>
        </LinearLayout>

        <TextView
            android:id="@+id/post_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="글내용"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_hashtag_rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scrollbars="horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_itemtag_rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scrollbars="horizontal" />

    <ListView
        android:id="@+id/post_cmt_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/post_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="댓글입력..." />

        <Button
            android:id="@+id/post_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="확인"/>
    </LinearLayout>


</LinearLayout>