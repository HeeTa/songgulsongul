<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_size"
        android:theme="@style/ToolbarTheme"
        android:background="@color/backgroundGrey">
        >

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">

        <smu.capstone.paper.layout.RoundImageView
            android:id="@+id/profile_userimage"
            android:layout_width= "@dimen/itemTag_size"
            android:layout_height="@dimen/itemTag_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart= "@dimen/common_margin"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/profile_userimage"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/profile_pointview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.textStyle"
                    android:text="내 포인트" />

                <TextView
                    android:id="@+id/profile_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/narrow_margin"
                    style="@style/Text.textBoldStyle"
                    android:text="0p" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/profile_follow_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_size_small"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/profile_userimage"
            android:text="팔로우"
            android:background="@color/inkGreyTransparent"
            android:visibility="invisible" />

        <Button
            android:id="@+id/profile_unfollow_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_size_small"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/profile_userimage"
            android:text="언팔로우"
            android:background="@color/inkGreyTransparent"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/profile_follow_btn"
            android:layout_toRightOf="@id/profile_userimage"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_feed_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.textBoldStyle"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.textStyle"
                    android:text="피드" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_follows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_follow_cnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Text.textBoldStyle"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Text.textStyle"
                        android:text="팔로우" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_follower_cnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Text.textBoldStyle"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Text.textStyle"
                        android:text="팔로워" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/narrow_margin"
        android:layout_marginTop="@dimen/narrow_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/profile_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            style="@style/Text.textStyle"
            android:text="소개글" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/narrow_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/profile_snsurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            style="@style/Text.textStyle"
            android:text="sns url" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_margin="@dimen/narrow_margin"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.textBoldStyle"
            android:text="게시글" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_rv"
        android:layout_margin="@dimen/narrow_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:item="@layout/post_image_item"  >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>