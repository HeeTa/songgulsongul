<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/market_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="검색"
        android:background="@drawable/border"
        android:layout_margin="@dimen/narrow_margin"
        style="@style/Text.medium">

    </SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/market_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/market_load_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/purpleGray"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="More.."
            style="@style/Text.textStyle">

        </TextView>

    </LinearLayout>

</LinearLayout>