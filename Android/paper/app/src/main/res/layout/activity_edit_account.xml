<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditProfileActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_profile_toolbar"
        android:background="@color/cardview_shadow_start_color"> </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderline"
        android:layout_margin="30dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/edit_account_idtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            >

            <EditText
                android:id="@+id/account_newid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="userid">

            </EditText>

            <Button
                android:id="@+id/account_id_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="중복확인">

            </Button>

        </LinearLayout>
        <TextView
            android:id="@+id/edit_account_pwtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:layout_margin="20dp"></TextView>
        <EditText
            android:id="@+id/account_newpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="password">
        </EditText>
        <TextView
            android:id="@+id/edit_account_pwcheck_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:layout_margin="20dp"></TextView>
        <EditText
            android:id="@+id/account_newpw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="password"></EditText>
        <TextView
            android:id="@+id/edit_account_pw_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호가 일치합니다"
            android:textColor="#EE530909"
            android:layout_margin="20dp"></TextView>

    </LinearLayout>
</LinearLayout>