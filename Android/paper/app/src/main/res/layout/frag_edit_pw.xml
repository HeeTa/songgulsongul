<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/edit_account_pwtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 비밀번호"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"></TextView>
        <EditText
            android:id="@+id/account_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="password">

        </EditText>
        <TextView
            android:id="@+id/edit_account_newpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새 비밀번호"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"></TextView>
        <EditText
            android:id="@+id/account_newpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="new password">

        </EditText>
        <TextView
            android:id="@+id/edit_account_newpw_checktxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새 비밀번호 확인"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"></TextView>
        <EditText
            android:id="@+id/account_newpw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="new password">

        </EditText>
        <TextView
            android:id="@+id/edit_account_pw_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="비밀번호가 일치합니다"
            android:textColor="#EE530909"
            android:textSize="15dp" />
    </LinearLayout>
</FrameLayout>