<?xml version="1.0" encoding="utf-8"?>
<smu.capstone.paper.layout.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/market_item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/market_item_name"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/test" />

    <TextView
        android:id="@+id/market_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/market_item_cost"
        android:layout_marginLeft="20dp"
        android:text="제품명"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/market_item_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"


        android:layout_marginLeft="20dp"
        android:text="가격"
        android:textSize="20dp" />
</smu.capstone.paper.layout.SquareLayout>